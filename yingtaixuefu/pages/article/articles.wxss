  margin: auto;
}
.first-line button{
  font-size: x-small;
  border: none;
}


.secontain{
  margin-top:10px; 
  
}

.forth-block{
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  justify-content: space-around;
  text-align: center;
  margin: auto;
}

.first-colnum{
    width: 45%;
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}

.readranks{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    font: x-small;
    padding-top:2px; 
}


.second-colnum{
    width: 45%;
    display: flex;
    flex-direction: column;
