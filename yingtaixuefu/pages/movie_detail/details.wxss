/* pages/mdetail/details.wxss */

page{
    background-color: #FFFFFF;
}
.weui-loading__wrp{
  padding:16px;text-align:center;
}
.weui-loading__wrp:last-child{
  background-color:rgba(0,0,0,.1);
}


.first-block{
display: flex;
flex-direction: row;
width: 100%;
height: 160px;
justify-content: space-around;
margin: auto;
}
.moviecover{
  width: 35%;
  height: 80%;
  margin: auto;
}

.moviecover image{
  width: 100%;
  height: 100%;
  margin: auto;

}

.first-right{
  height: 80%;
  width: 40%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: auto;
}

.second-block{
  margin: auto;
  margin-top:20px; 
  width: 90%;
}

.second-block textarea{
  width: 100%;
  height: 100%
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}

.third-block{
  margin-top:10px; 
  width: 90%;
  margin: auto;
  align-items: center;
}

.third-block view{
  width: 100%;
  height: 100%;
}

.forth-block{
  margin-top:15px; 
  margin: auto;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font: x-small;
}

.forth-block view{
  border: solid gold;
  /* border: solid ; */
  border-radius: 45px;
  margin: auto;
}

.empty{
  width: 100%;
}


.commentform {

margin-top:10px; 
width: 90%;
display: flex;
justify-content: space-around;
}

.commentform input{
  
  width: 80%;
}
.commentform button{
 
  width: 15%;
}