/* pages/warticle/warticles.wxss */

.page{
  margin-top: 10px;
  width: 100%;
  height: 100%;
  display: flex;
  /* justify-content: space-around; */
  justify-content: center;
  align-items: center;
}

.article{
  width: 90%;
  margin: auto;
  border: solid green;
  background: white;
}

.article input{
  margin: 10px;
  width: 95%;
}

.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}


.conts{
  width: 100%;
  height: 650rpx;
  border: 1rpx soldi red;
}
.areas{
  width: 90%;
  height:100%;
  font-size: 30rpx;
  padding-top: 30rpx;
  margin: 10rpx;
  overflow: hidden;   
  position: relative;
  white-space: pre-wrap;
  word-break: break-all;

}
.currentWordNumber{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  top: -6rpx;
  right: 0px;
}
.hint{
   font-size: 28rpx;
   position: absolute;
   top: 120rpx;
   left: 30rpx;
   color: #FF6600;
}

.footer{
  width: 90%;
  margin: auto;
}